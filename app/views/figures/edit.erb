<h2>Edit Figure</h2>
<form action="/figures/<%= @figure.id %>" method="post">
<input id="hidden" type="hidden" name="_method" value="patch">
Name: <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>"> <br>
<h4> Titles </h4> 
<% @titles.each do |title| %>
    <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %> ><%= title.name %>
    <br>
<%  end %>
<h4>Create New Title:</h4>
<input type="text" id="new_title" name="title[name]"><br>
<h4>Landmarks </h4>
<% @landmarks.each do |landmark| %>
    <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %>
    <br>
<%  end %>
<h4>Create New landmark:</h4>
Name: <input type="text" id="new_landmark" name="landmark[name]">
Year: <input type="text" id="new_landmark_year" name="landmark[year_completed]">
<input type="submit" id="Edit Figure" value="EDIT">

</form>
