<h2>Create Figures</h2>

<form action="/figures" method="POST">
    <label for="figure_name">Name: </label>
    <input type="text" name="figure[name]" id="figure_name">

    <h5>Titles</h5>

    <% @titles.each do |title| %>
        <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"> <%= title.name %><br>
    <% end %>

    <h5>Create New Title:</h5>

        <input type="text" name="title[name]" id="new_title">

    <h5>Landmarks</h5>

    <% @landmarks.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"> <%= landmark.name %><br>
    <% end %>


    <h5>Create New Landmarks:</h5>

        <label for="new_landmark_name">Name: </label>
        <input type="text" name="landmark[name]" id="new_landmark"> 
        <label for="new_landmark_name">Year: </label>
        <input type="text" name="landmark[year_completed]" id="new_landmark_year">

    <button type="submit" id="Create New Figure">Create New Figure</button>
</form>

<a class="button" href="/figures">figures</a>
