<h2>Create Figure</h2>
<form action="/figures" method="post">
Name: <input type="text" id="figure_name" name="figure[name]"> <br>
<h4> Titles </h4> 
<% @titles.each do |title| %>
    <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>"><%= title.name %>
    <br>
<%  end %>
<h4>Create New Title:</h4>
<input type="text" id="new_title" name="title[name]"><br>
<h4>Landmarks </h4>
<% @landmarks.each do |landmark| %>
    <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><%= landmark.name %>
    <br>
<%  end %>
<h4>Create New landmark:</h4>
Name: <input type="text" id="new_landmark" name="landmark[name]">
Year: <input type="text" id="new_landmark_year" name="landmark[year_completed]">
<input type="submit" id="Create New Figure" value="SUBMIT">

</form>